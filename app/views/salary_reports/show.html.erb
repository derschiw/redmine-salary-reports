<% html_title "#{t('.report')} #{I18n.l @salary_report.date_from, format: "%d.%m.%y"} - #{I18n.l @salary_report.date_to, format: "%d.%m.%y"}" %>
<h2><%= t('.report') %></h2>

<%= link_to t('.pdf'), "#{salary_report_report_path(@salary_report)}.pdf", target: :_blank %>

<p>
  <strong><%= t '.user' %></strong>: <%= link_to @salary_report.user, @salary_report.user %>
</p>
<p>
  <strong><%= t '.date_from' %></strong>: <%= I18n.l @salary_report.date_from, format: "%d. %B %Y" %>
</p>
<p>
  <strong><%= t '.date_to' %></strong>: <%= I18n.l @salary_report.date_to, format: "%d. %B %Y" %>
</p>

<hr>
<h3><%= t '.salary' %></h3>
<p>
  <strong><%= t '.salary_net' %></strong>: <%= "%0.2f" % @salary_report.salary_net %>Chf
</p>
<p>
  <strong><%= t '.ahv_contributions' %></strong>: <%= "%0.2f" % @salary_report.ahv_contribution %>Chf (<%= "%0.2f" % (@salary_report.ahv_rate_employee * 100) %>%)
</p>
<p>
  <strong><%= t '.alv_contributions' %></strong>: <%= "%0.2f" % @salary_report.alv_contribution %>Chf (<%= "%0.2f" % (@salary_report.alv_rate_employee * 100) %>%)
</p>
<p>
  <strong><%= t '.pension_pool_contributions' %></strong>: <%= "%0.2f" % @salary_report.pension_pool_contribution %>Chf (<%= "%0.2f" % (@salary_report.pension_pool_rate_employee * 100) %>%)
</p>
<p>
  <strong><%= t '.nbu_contributions' %></strong>: <%= "%0.2f" % @salary_report.nbu_contribution %>Chf (<%= "%0.2f" % (@salary_report.nbu_rate_employee * 100) %>%)
</p>
<p>
  <strong><%= t '.total_contributions' %></strong>: <%= "%0.2f" % @salary_report.total_contributions %>Chf
</p>
<p>
  <strong><%= t '.salary_gross' %></strong>: <%= "%0.2f" % @salary_report.salary_gross %>Chf
</p>

<hr>

<h3><%= t '.report_period' %></h3>
<p>
<strong><%= t '.working_hours' %></strong>: <%= "%0.2f" % @salary_report.working_hours %>h
</p>
<p>
<strong><%= t '.holidays' %></strong>: <%= "%0.2f" % @salary_report.calc_holidays_taken %>h
</p>
<p>
<strong><%= t '.working_hours_ignoring_holidays' %></strong>: <%= "%0.2f" % @salary_report.working_hours_ignoring_holidays %>h
</p>
<p>
<strong><%= t '.calc_overtime_ignoring_holidays' %></strong>: <%= "%0.2f" % @salary_report.calc_overtime_ignoring_holidays %>h
</p>
<p>
<strong><%= t '.calc_overtime_considering_holidays' %></strong>: <%= "%0.2f" % @salary_report.calc_overtime_considering_holidays %>h
</p>

<hr>

<h3><%= t '.current_year' %></h3>
<p>
  <strong><%= t '.since' %></strong>: <%= I18n.l @salary_report.employment_date, format: "%d. %B %Y" %>
</p>
<p>
<strong><%= t '.calc_overtime_ignoring_holidays_current_year' %></strong>: <%= "%0.2f" % @salary_report.calc_overtime_ignoring_holidays(@salary_report.employment_date) %>
</p>
<p>
<strong><%= t '.calc_overtime_considering_holidays_current_year' %></strong>: <%= "%0.2f" % @salary_report.calc_overtime_considering_holidays(@salary_report.employment_date) %>
</p>
<p>
<strong><%= t '.calc_holidays_taken_current_year' %></strong>: <%= "%0.2f" % @salary_report.calc_holidays_taken(@salary_report.employment_date) %>
</p>
<p>
<strong><%= t '.calc_percentage_holidays_taken_current_year' %></strong>: <%= "%0.2f" % @salary_report.calc_percentage_holidays_taken %>
</p>

<hr>

<h3><%= t '.report_setup' %></h3>
<p>
  <strong><%= t '.week_hours' %></strong>: <%= @salary_report.week_hours %>h
</p>
<p>
  <strong><%= t '.weeks_of_per_year' %></strong>: <%= @salary_report.weeks_of_per_year %>
</p>
<p>
  <strong><%= t '.days_of_per_year' %></strong>: <%= @salary_report.days_of_per_year %>
</p>
<p>
  <strong><%= t '.start_date' %></strong>: <%= I18n.l @salary_report.start_date, format: "%d. %B %Y" %>
</p>
<p>
  <strong><%= t '.workload' %></strong>: <%= @salary_report.workload * 100 %>%
</p>

<%= link_to t('.delete'), @salary_report, method: :delete, data: {confirm: t('.confirm')}%>