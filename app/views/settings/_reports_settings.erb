<h2>Allgemein</h2>
<table>
  <tbody>
    <tr>
      <th>Stunden pro Arbeitswoche</th>
      <td>
        <input type="text" id="settings_week_hours" 
                           value="<%= settings['week_hours'] %>" 
                           name="settings[week_hours]" >
      </td>
    </tr>
    <tr>
      <th>Anzahl Ferienwochen</th>
      <td>
        <input type="text" id="settings_weeks_of_per_year" 
                           value="<%= settings['weeks_of_per_year'] %>" 
                           name="settings[weeks_of_per_year]" >
      </td>
    </tr>
    <tr>
      <th>Anzahl Feiertage pro Jahr</th>
      <td>
        <input type="text" id="settings_days_of_per_year" 
                           value="<%= settings['days_of_per_year'] %>" 
                           name="settings[days_of_per_year]" >
      </td>
    </tr>
  </tbody>
</table>

<h2><%= t('.salary') %></h2>
<table>
    <tr>
      <th><%= t('.salary_net') %></th>
      <th>Lohn (Netto, 100%)</th>
      <td>
        <input type="text" id="settings_salary" 
                           value="<%= settings['salary'] %>" 
                           name="settings[salary]" >
      </td>
    </tr>
</table>

<h2>Beitr√§ge</h2>
<h2><%= t('.contributions') %></h2>
<table>
  <tbody>
    <tr>
      <th>AHV / IV / EO Satz(%)</th>
      <th><%= t('.ahv') %></th>
      <td>
        <input type="text" id="settings_ahv_rate" 
                           value="<%= settings['ahv_rate'] %>" 
                           name="settings[ahv_rate]" >
      </td>
    </tr>
    <tr>
      <th>ALV Satz(%)</th>
      <th><%= t('.alv') %></th>
      <td>
        <input type="text" id="settings_alv_rate" 
                           value="<%= settings['alv_rate'] %>" 
                           name="settings[alv_rate]" >
      </td>
    </tr>
    <tr>
      <th>Pensionskasse Satz Arbeitnehmer(%)</th>
      <th><%= t('.pension_pool') %></th>
      <td>
        <input type="text" id="settings_pension_pool_rate" 
                           value="<%= settings['pension_pool_rate'] %>" 
                           name="settings[pension_pool_rate]" >
      </td>
    </tr>
    <tr>
      <th>Nichtbetriebsunfallversicherung NBU Satz (%)</th>
      <th><%= t('.nbu') %></th>
      <td>
        <input type="text" id="settings_nbu_rate" 
                           value="<%= settings['nbu_rate'] %>" 
                           name="settings[nbu_rate]" >
      </td>
    </tr>
    <tr>
      <th>NBU zulasten Arbeitnehmer</th>
      <th><%= t('.nbu_frac') %></th>
      <td>
        <select id="settings_nbu_rate_frac" 
                           name="settings[nbu_rate_frac]" >
          <option <%= 'selected' if settings['nbu_rate_frac'] == "1.0" %> value="1.0">100%</option>
          <option <%= 'selected' if settings['nbu_rate_frac'] == "0.5" %> value="0.5">50%</option>
          <option <%= 'selected' if settings['nbu_rate_frac'] == "0.0" %> value="0.0">0%</option>
        </select>
      </td>
    </tr>
  </tbody>
</table>
